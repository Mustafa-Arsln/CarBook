@model List<ResultsAllBlogsWithAuthorDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section">
    <div class="container">
        <div class="row d-flex justify-content-center">
            @foreach(var item in Model){
            <div class="col-md-12 text-center d-flex ftco-animate">
                <div class="blog-entry justify-content-end mb-md-5">
                        <a href="/Blog/BlogDetail/@item.blogId" class="block-20 img" style="background-image: url('@item.coverImageURL');">
                    </a>
                    <div class="text px-md-5 pt-4">
                        <div class="meta mb-3">
                            <div><p href="#">@item.createdDate.ToShortDateString()</p></div>
                            <div><p href="#">@item.authorName</p></div>
                            <div><p href="#" class="meta-chat"><span class="icon-chat"></span> </p></div>
                        </div>
                            <h3 class="heading mt-2"><a href="/Blog/BlogDetail/@item.blogId">@item.title</a></h3>
                        <p>@item.Description</p>
                        <p><a href="/Blog/BlogDetail/@item.blogId" class="btn btn-primary">Yorumları Gör... 
                            <span class="icon-long-arrow-right"></span></a></p>
                    </div>
                </div>
            </div>
            }
        </div>
      
    </div>
</section>

